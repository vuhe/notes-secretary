{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "src/**",
      "./*.json",
      "./*.js",
      "./*.ts",
      "./*.mts",
      "./*.mjs",
      "!!dist",
      "!!src-tauri",
      "!!node_modules"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "linter": {
    "enabled": true,
    "domains": {
      "project": "all",
      "react": "all"
    },
    "rules": {
      "a11y": "off",
      "recommended": true,
      "correctness": {
        "useHookAtTopLevel": "error",
        "useImportExtensions": "off"
      },
      "nursery": {
        "noFloatingPromises": "error",
        "useAwaitThenable": "warn"
      },
      "suspicious": {
        "noConsole": "warn",
        "useGoogleFontDisplay": "error",
        "noImplicitAnyLet": "error",
        "noDocumentImportInPage": "error",
        "noHeadImportInDocument": "error"
      },
      "style": {
        "noParameterAssign": "warn",
        "noUselessElse": "warn",
        "useConsistentArrayType": "warn",
        "noDefaultExport": "error",
        "noNamespace": "error",
        "noHeadElement": "error",
        "noInferrableTypes": "error",
        "noParameterProperties": "error",
        "useSelfClosingElements": "error",
        "useComponentExportOnlyModules": {
          "level": "error",
          "options": {
            "allowExportNames": ["metadata"]
          }
        }
      },
      "performance": {
        "noImgElement": "off"
      }
    }
  },
  "overrides": [
    {
      "includes": ["src/server/**/*.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off"
          }
        }
      }
    },
    {
      "includes": ["tsconfig.json"],
      "json": {
        "parser": {
          "allowComments": true,
          "allowTrailingCommas": true
        }
      }
    }
  ],
  "css": {
    "parser": {
      "tailwindDirectives": true
    },
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    },
    "globals": []
  }
}
