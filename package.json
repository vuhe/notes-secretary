    "babel-plugin-react-compiler": "^1.0.0",
    "globals": "^16.5.0",
    "katex": "^0.16.28",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.9.3",
